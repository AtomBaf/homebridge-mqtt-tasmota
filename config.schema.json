{
  "pluginAlias": "mqtt-tasmota",
  "pluginType": "accessory",
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [{
        "key": "name",
        "flex": "5 5 500px"
      },{
        "key": "debug",
        "flex": "1 1 100px",
        "default": false
      }]
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [{
        "key": "topic",
        "flex": "3 3 300px"
      },{
        "key": "fullTopic",
        "flex": "3 3 300px"
      }]
    },
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [{
        "key": "type",
        "flex": "4 4 400px"
      },{
        "key": "index",
        "flex": "2 2 200px"
      }]
    },

    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [{
        "flex": "4 4 400px",
        "key": "url"
      },{
        "flex": "1 1 100px",
        "key": "username"
      },{
        "flex": "1 1 100px",
        "key": "password",
        "type": "password"
      }]
    }
  ],
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "description": "Name of accessory, as shown in HomeKit."
      },
      "type": {
        "title": "Type",
        "required": true,
        "type": "string",
        "default": "switch",
        "oneOf": [{
            "title": "Switch",
            "enum": ["switch"]
          },{
            "title": "Light Bulb",
            "enum": ["lightbulb"]
          },{
            "title": "Fan",
            "enum": ["fan"]
          },{
            "title": "Temperature/Humidity sensor",
            "enum": ["sensor"]
          },{
            "title": "Smoke detector",
            "enum": ["smoke"]
          },{
            "title": "Doorbell",
            "enum": ["doorbell"]
          },{
            "title": "Blinds & Shutters",
            "enum": ["blinds"]
          },{
            "title": "Valve",
            "enum": ["valve"]
          }
        ]
      },
      "url": {
        "title": "MQTT Broker URL",
        "type": "string",
        "required": true,
        "format": "uri",
        "default": "mqtt://localhost:1883",
        "description": "URL for MQTT broker"
      },
      "username": {
        "title": "Username",
        "type": "string",
        "required": false,
        "description": "Username for MQTT broker (optional)"
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": false,
        "description": "Password for MQTT broker (optional)"
      },
      "topic": {
        "title": "Topic",
        "type": "string",
        "required": true,
        "description": "Tasmota device topic, as shown in its MQTT settings"
      },
      "fullTopic": {
        "title": "Full Topic",
        "type": "string",
        "required": true,
        "description": "Tasmota device full topic, as shown in its MQTT settings",
        "default": "%topic%/%prefix%/"
      },
      "debug": {
        "title": "Debug",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "index": {
        "title": "Index",
        "type": "integer",
        "condition": {
          "functionBody": "return ['switch', 'blinds', 'valve', 'lightbulb'].includes(model.type);"
        },
        "minimum": 1
      }
    }
  }
}